{
  "organization": {
    "name": "WCP Profile Team",
    "description": "Walmart Customer Profile team configuration for multi-platform release validation"
  },
  "platforms": {
    "android": {
      "display_name": "Android",
      "report_dir": "android",
      "local_repo_path": "{{ANDROID_REPO_PATH}}",
      "repository": {
        "name": "walmart-glass",
        "url": "git@gecgithub01.walmart.com:Walmart-Android/walmart-glass.git"
      },
      "teams": {
        "account-core": {
          "name": "Android Account Core Team",
          "description": "Manages account-related features and APIs (excluding payment features)",
          "modules": [
            "features/account/feature-account",
            "features/account/feature-account-api",
            "features/account/feature-address-config",
            "features/account/feature-address-config-api",
            "features/account/feature-address-suggestions",
            "features/account/feature-address-suggestions-api",
            "features/account/feature-communication-preference",
            "features/account/feature-communication-preference-api",
            "features/account/feature-delivery-address",
            "features/account/feature-delivery-address-api",
            "features/account/feature-myprofile",
            "features/account/feature-myprofile-api",
            "features/account/feature-privacy",
            "features/account/feature-privacy-api"
          ]
        },
        "account-wallet": {
          "name": "Android Account Wallet Team", 
          "description": "Manages wallet, payment, and financial features",
          "modules": [
            "features/account/feature-payment-methods",
            "features/account/feature-payment-methods-api",
            "features/account/feature-payment-ui-shared",
            "features/cxo/feature-payment-chooser",
            "features/cxo/feature-payment-chooser-api"
          ]
        }
      }
    },
    "ios": {
      "display_name": "iOS",
      "report_dir": "ios",
      "local_repo_path": "{{IOS_REPO_PATH}}",
      "repository": {
        "name": "glass-app",
        "url": "git@gecgithub01.walmart.com:walmart-ios/glass-app.git"
      },
      "teams": {
        "account-core": {
          "name": "iOS Account Core Team",
          "description": "Manages account-related features for iOS (excluding wallet/payment)",
          "modules": [
            "Plugins/Account",
            "Plugins/Address",
            "Plugins/CommsPref",
            "Plugins/PetRx",
            "Plugins/Pets",
            "Plugins/TaxProfile",
            "Modules/FeatureUI/AccountUIShared"
          ]
        },
        "account-wallet": {
          "name": "iOS Account Wallet Team",
          "description": "Manages wallet and payment features for iOS",
          "modules": [
            "Plugins/AccountWallet",
            "Plugins/PaymentChooser",
            "Modules/FeatureUI/PaymentsUIShared"
          ]
        }
      }
    },
    "web": {
      "display_name": "Web",
      "report_dir": "web",
      "local_repo_path": "{{WEB_REPO_PATH}}",
      "repository": {
        "name": "walmart",
        "url": "git@gecgithub01.walmart.com:walmart-web/walmart.git"
      },
      "teams": {
        "account-core": {
          "name": "Web Account Core Team",
          "description": "Manages account-related features for web (excluding wallet/payment)",
          "modules": [
            "libs/account"
          ]
        },
        "account-wallet": {
          "name": "Web Account Wallet Team",
          "description": "Manages wallet and payment features for web",
          "modules": [
            "libs/wallet"
          ]
        }
      }
    }
  },
  "github_config": {
    "enterprise_url": "https://gecgithub01.walmart.com",
    "api_base": "https://gecgithub01.walmart.com/api/v3",
    "credentials": {
      "username": "{{GITHUB_USERNAME}}",
      "email": "{{GITHUB_EMAIL}}",
      "token": "{{GITHUB_TOKEN}}"
    },
    "default_remote": "origin",
    "timeout_seconds": 30
  },
  "metadata": {
    "version": "3.0",
    "last_updated": "2025-09-30",
    "description": "Complete WCP Profile configuration with teams, repositories, GitHub credentials, and local paths"
  }
}